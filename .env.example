# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Environment
NODE_ENV=development

# API Keys
OPENROUTER_API_KEY=your_openrouter_key
OPENAI_API_KEY=your_openai_key  # Used for Whisper voice transcription

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security
CRON_SECRET=your_secure_cron_secret  # Used for authenticating scheduled sync requests
SYNC_TOKEN=your_secure_sync_token    # Used for authenticating sync API requests

# GitHub Integration
GITHUB_TOKEN=your_github_token       # Used for pushing changes to repository
HEROKU_MONGODB_URI=your_heroku_mongodb_uri  # Production database URI
